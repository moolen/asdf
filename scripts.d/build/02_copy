#!/bin/bash
set -e

function startCommand {
    docker create --name smcl_build figome/smcl_build
    docker cp smcl_build:/go/src/github.com/figome/semantic-changelog/dist ./dist

    ls -a dist/
}

function help {
    cat << "EOF"
Usage: ./kitt build 02_copy
    copies the binaries from the container
EOF
}

function init {
    echo $@
    # shellcheck disable=SC2194
    case "$1" in
        --help)
            help
            exit 0
            ;;
        *)
            startCommand
            exit 0
    esac
}
init $@

